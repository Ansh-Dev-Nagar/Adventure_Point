<% layout('layouts/boilerplate') %>
    <h1>All Adventureplaces</h1>
    <div>
        <a href="/adventureplaces/new">Add AdventurePlace</a>
    </div>
        <% for (let adventureplace of adventureplaces){%>
            <div class="card" mb-3>
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" alt="" src="<%=adventureplace.image%>">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"> <%= adventureplace.title%></h5>
                            <p class="card.text"><%=adventureplace.description%></p>
                            <p class="card.text">
                              <small class="text-muted"><%=adventureplace.location%></small>
                            </p>
                            <a class="btn btn-primary" href="/adventureplaces/<%=adventureplace._id%>">View <%=adventureplace.title%></a>
                        </div>
                    </div>
                </div>
            </div>
            </div>
        <% }%>
    
