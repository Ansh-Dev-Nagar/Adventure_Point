<% layout('layouts/boilerplate') %>

    <div class="row">
        <div class="col-6">
            <div class="card mb-3">
                <img src="<%=adventureplace.image%>" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%=adventureplace.title%></h5>
                  <p class="card-text"><%=adventureplace.description%></p>
                </div>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item text-muted"><%=adventureplace.location%></li>
                  <li class="list-group-item">Price : <%=adventureplace.price%> INR</li>
                </ul>
                <div class="card-body">
                  <a href="/adventureplaces/<%= adventureplace._id%>/edit" class="card-link btn btn-info text-white">Edit</a>
                  <form class="d-inline" action="/adventureplaces/<%=adventureplace._id%>?_method=DELETE" method ="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
                </div>
                <div class="card-footer text-muted">
                    5 days ago
                </div>
              </div>
        </div>
        <div class="col-6">
          <h2>Leave a Review</h2>
          <form action="/adventureplaces/<%=adventureplace._id%>/reviews" method="post" class="mb-3 validated-form" novalidate>
            <div class="mb-3">
              <label class="form-label" for="rating">Rating</label>
              <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating">
            </div>
            <div class="mb-3">
              <label class="form-label" for="body">Review</label>
              <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>
            <button class="btn btn-success" >Submit</button>
          </form>
          <% for(let review of adventureplace.reviews) { %>
          <div class="card">
            <div class="mb-3 card-body">
              <h5 class="card-title">Rating: <%= review.rating %></h5>
              <p class="card-text">Review: <%= review.body %></p>
              <form action="/adventureplaces/<%=adventureplace._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
                <button class="btn btn-sm btn-danger">Delete</button>
              </form>
          </div>
        </div>
          <% } %>
        </div>
    </div>

    
